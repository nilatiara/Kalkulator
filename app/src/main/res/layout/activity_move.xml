<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MoveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENGHITUNG VOLUME BALOK"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@color/pink"
            android:textColor="@color/white" />

        <!-- Input panjang -->
        <EditText
            android:id="@+id/edt_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Panjang"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="16dp" />

        <!-- Input lebar -->
        <EditText
            android:id="@+id/edt_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Lebar"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp" />

        <!-- Input tinggi -->
        <EditText
            android:id="@+id/edt_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Tinggi"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp" />

        <!-- Tombol hitung -->
        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung Volume"
            android:backgroundTint="@color/pink"
            android:textColor="@color/white"
            android:layout_marginTop="12dp" />

        <!-- Hasil -->
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil akan tampil di sini"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <!-- Foto -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/foto"
            android:layout_marginTop="20dp" />

        <!-- Nama -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nila Mahardika Tiara Sari"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- NIM -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22533631"
            android:textAlignment="center"
            android:textSize="16sp" />

        <!-- Kelas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TI 6D"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
